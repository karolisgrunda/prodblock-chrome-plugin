{
  "name": "ProdSTOP",
  "description": "Extension which alerts you when you open production application!",
  "version": "2.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage", 
    "activeTab", 
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "/images/icon_16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/images/icon_16.png",
    "32": "/images/icon_32.png",
    "48": "/images/icon_48.png",
    "128": "/images/icon_128.png"
  },
  "options_page": "options.html"
}
